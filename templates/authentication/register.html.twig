{% extends 'base.html.twig' %}

{% block body %}
    {% include 'authentication/welcome.html.twig' %}

    <div class="form">

        <div class="form-errors">{{ form_errors(form.password.first) }}</div>

        {{ form_start(form) }}
            <div class="form-fields">
                <div>{{ form_label(form.username) }}</div>
                {{ form_widget(form.username) }}
            </div>

            <div class="form-fields">
                <div>{{ form_label(form.password.first) }}</div>
                {{ form_widget(form.password.first) }}
            </div>

            <div class="form-fields">
                <div>{{ form_label(form.password.second) }}</div>
                {{ form_widget(form.password.second) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
